<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#00ff00"
        android:text="@string/hello_world"
        app:layout_constraintBottom_toBottomOf="@id/bt_click2jump"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_click2jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_jump"
        android:onClick="doClick"
        app:layout_constraintTop_toBottomOf="@+id/tv_hello"
        app:layout_constraintStart_toStartOf="@+id/tv_hello"
        app:layout_constraintEnd_toEndOf="@+id/tv_hello"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_click_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_click_res"
        app:layout_constraintStart_toStartOf="@+id/bt_click2jump"
        app:layout_constraintEnd_toEndOf="@+id/bt_click2jump"
        app:layout_constraintTop_toBottomOf="@+id/bt_click2jump"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>