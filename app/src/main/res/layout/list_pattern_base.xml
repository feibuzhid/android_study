<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lpb_tv_item1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lpb_iv_item1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/lpb_iv_item1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/lpb_tv_item1"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/lpb_iv_item1_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>